<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/amount_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter amount"
        android:inputType="numberDecimal" />

    <RadioGroup
        android:id="@+id/duration_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/duration_6_months"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6 months (Interest rate: 3%)" />

        <RadioButton
            android:id="@+id/duration_12_months"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12 months (Interest rate: 5%)" />

        <RadioButton
            android:id="@+id/duration_24_months"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="24 months (Interest rate: 7%)" />
    </RadioGroup>

    <TextView
        android:id="@+id/estimated_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Estimated Amount: "
        android:paddingTop="16dp" />

    <TextView
        android:id="@+id/total_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total Amount: "
        android:paddingTop="8dp" />

    <Button
        android:id="@+id/submit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit" />
</LinearLayout>